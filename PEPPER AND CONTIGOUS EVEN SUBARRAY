#include<bits/stdc++.h>
using namespace std;

int main(){
    int test_cases;
    cin>>test_cases;
    
    while(test_cases--){
    int size, count=0, reserve=0, temp;
    cin>>size;
    
    for(int i=0; i<size; i++){
        cin>>temp;
        if(temp%2==0)
        count++;
        else {
            if(count>reserve)
        reserve=count;
        count=0;
        }
    }
    if(count>reserve && count !=0)
    cout<<count<<endl;
    else if(count<reserve && reserve !=0) 
    cout<<reserve<<endl;
    else cout<<"-1"<<endl;
    }
}
