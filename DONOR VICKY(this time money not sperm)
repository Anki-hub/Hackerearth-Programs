#include<stdio.h>
#include<math.h>
int main(){
    int T; scanf("%d", &T);
    while(T){
     int N, X;
     scanf("%d %d", &N, &X);
     float n;
     
     n = ((sqrt(1+(8*X)) - 1)/2);
     X=n;
     
     if(n>X){
         n+=1;
         X=n;
     }
         
     printf("%d\n", (X%N!=0)?X%N:N);
     
     T--;   
    }
}
