#include<stdio.h>
int main(){
    int T, i; scanf("%d", &T);
    long long int a[T];
    
    for(i=0; i<T; i++)
    scanf("%lld", &a[i]);
    
long long int sum=0;
    
    for(i=1; i<T; i++){
        if(a[i] < a[i-1]){
        sum+=(a[i-1]-a[i])+1;
        a[i]+=(a[i-1]-a[i])+1;
        }
    }
    
    printf("%lld", sum);
}
