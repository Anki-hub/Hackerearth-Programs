#include<stdio.h>
int main(){
    int t; scanf("%d", &t);
while(t!=0){
    int i, n, count=0;
    scanf("%d", &n);
    
    char a[n];
    scanf("%s", a);
    
    
    for(i=0; i<n ; i++){
        
        if(a[i]>=48 && a[i]<=57)
            {
            count++;
            
        if(a[i+1]>=48 && a[i+1]<=57)
            count--;
            }
    }
printf("%d\n", count);
    t--;
    }
}
