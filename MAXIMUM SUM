#include<stdio.h>
int main(){
    //DECLARING VARIABLE FOR NUMBER OF ELEMENTS
     int n; scanf("%lld", &n);
    //DECLARING COUNT VARIABLE TO COUNT ALL POSITIVE NUMBERS AND SUM VARIABLE TO COUNT THE SUM OF POSITIVE NUMBERS 
  long long int i, count=0, sum=0, a;
    
    //DECLARING VARIABLE MAX IN CASE IF ALL THE VALUES ARE LESS THAN 0 THAT WILL STORE THE LEAST VALUE
    int max=-999999;;
    for(i=0; i<n; i++){
        //SCANNING THE INPUT
        scanf("%lld", &a);
        
        //IF NUMBER IS LESS THAN 0 IT WO'NT BE COUNTED
        if(a>=0){
            count++;
            sum+=a;
        }
        else if(a>max)
        max=a;
    }
    
    if(count==0)
{
    sum=max;
    count=1;
 }
 
 //PRINTING THE SUM AND COUNT
    printf("%lld %lld", sum, count);
}
