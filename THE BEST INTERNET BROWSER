#include<stdio.h>
#include<string.h>
int main(){
    
    int t; scanf("%d", &t);
while(t!=0){
    char a[200];
    scanf("%s", a);
    int count=0, i;
    
    for(i=4; i<(strlen(a)-4); i++){
        if((a[i]=='a') || (a[i]=='e') ||(a[i]=='i') || (a[i]=='o') || (a[i]=='u'))
        count++;
        }
    printf("%d/%d\n", strlen(a)-count-4, strlen(a));

    t--;
    }
}
